{% comment %}
  Renders the quote request modal.
{% endcomment %}

<style>
  .quote-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: none; /* Hidden by default */
    justify-content: center;
    align-items: center;
    z-index: 101; /* High z-index */
    overflow-y: auto;
  }
  .quote-modal[open] {
    display: flex;
  }
  .quote-modal__content {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    width: 90%;
    max-width: 600px;
    position: relative;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
  }
  .quote-modal__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 1rem;
  }
  .quote-modal__close {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }
  .quote-modal__body {
    overflow-y: auto;
    flex-grow: 1;
  }
  .quote-modal__footer {
    border-top: 1px solid #e5e5e5;
    padding-top: 1rem;
  }
</style>

<div id="QuoteModal" class="quote-modal">
  <div class="quote-modal__content">
    <div class="quote-modal__header">
      <h2 class="h3">Mi Cotización</h2>
      <button class="quote-modal__close" aria-label="Cerrar">
        <svg class="icon icon-close" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path><path d="M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path></svg>
      </button>
    </div>

    <div class="quote-modal__body">
      <div id="quote-modal-items-container">
        <!-- Items will be injected here -->
      </div>
      <div id="quote-modal-empty-message" style="display: none; text-align: center; padding: 2rem 0;">
        <p>Tu cotizador está vacío.</p>
        <a href="{{ routes.all_products_collection_url }}" class="button button--secondary">Continuar Navegando</a>
      </div>
    </div>

    <div id="quote-modal-form-container" class="quote-modal__footer">
      {%- form 'contact', id: 'QuoteModalForm' -%}
        <input type="hidden" name="contact[form_type]" value="Quote Request">
        <div class="field">
          <input class="field__input" type="text" name="contact[name]" required placeholder="Nombre">
          <label class="field__label">Nombre *</label>
        </div>
        <div class="field">
          <input class="field__input" type="email" name="contact[email]" required placeholder="Correo electrónico">
          <label class="field__label">Correo electrónico *</label>
        </div>
        <div class="field">
          <textarea class="text-area field__input" name="contact[body]" placeholder="Mensaje adicional"></textarea>
          <label class="field__label">Mensaje</label>
        </div>
        <textarea name="contact[quote_details]" id="QuoteModalForm-details" hidden></textarea>
        <button type="submit" class="button button--primary button--full-width">Enviar Cotización</button>
      {%- endform -%}
    </div>
  </div>
</div>

<template id="quote-modal-item-template">
  <div class="cart-item" style="display: flex; gap: 1rem; padding: 1rem 0; border-bottom: 1px solid #e5e5e5;">
    <div class="cart-item__media" style="flex-shrink: 0;">
      <img class="cart-item__image" src="" alt="" loading="lazy" width="100" height="100" style="object-fit: cover;">
    </div>
    <div class="cart-item__details" style="flex-grow: 1;">
      <a href="#" class="cart-item__name h5" style="text-decoration: none; color: inherit;"></a>
      <div class="product-option" style="font-size: 0.85rem; color: #666;"></div>
    </div>
    <div class="cart-item__quantity" style="display: flex; align-items: center;">
      <quantity-input class="quantity">
        <input class="quantity__input" type="number" min="1" value="1" style="width: 50px; text-align: center;">
      </quantity-input>
    </div>
    <div class="cart-item__remove" style="display: flex; align-items: center;">
      <button name="remove" class="button button--tertiary">Eliminar</button>
    </div>
  </div>
</template>
